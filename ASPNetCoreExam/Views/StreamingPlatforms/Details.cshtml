@model ASPNetCoreExam.Models.StreamingPlatform

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<hr/>
<div class="row pb-0 d-flex">
    <div class="col-12 col-lg-6 col-md-12 justify-content-between">
        <img src="@("~/image/" + Model.ImageName)" asp-append-version="true" width="350" height="350">
    </div>
    <div class="col-12 col-lg-6 col-md-12 justify-content-between">
        <h2>@Html.DisplayNameFor(model => model.Description)</h2>
        <br />
        <p>@Html.DisplayFor(model => model.Description)</p>
    </div>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
